<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.root.myapplication2.MainActivity"
    tools:showIn="@layout/activity_main">

     <TextView
        android:id="@+id/totalTextView"
        android:layout_width="374dp"
        android:layout_height="60dp"
        android:text="0"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:lineSpacingExtra="8sp"
        android:text="%"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_alignTop="@+id/percentageTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:lineSpacingExtra="8sp"
        android:text="of"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="240dp"
        android:layout_above="@+id/numberTxt"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:lineSpacingExtra="8sp"
        android:text="What is"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="124dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/totalTextView"
        android:layout_alignStart="@+id/calcBtn"
        android:layout_marginStart="106dp" />

    <EditText
        android:id="@+id/percentageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Percentage"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/numberTxt"
        android:layout_marginTop="35dp" />



    <EditText
        android:id="@+id/numberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Number"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_marginBottom="66dp"
        android:layout_alignBottom="@+id/calcBtn"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:id="@+id/calcBtn"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:text="CALCULATE"
        android:textColor="?android:attr/colorBackground"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="359dp"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afroz Software Solutions"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="359dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

